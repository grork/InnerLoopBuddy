{
    "name": "simplebrowser-helper-extension",
    "publisher": "codevoid",
    "displayName": "SimpleBrowser Helper",
    "description": "Open a simple browser to a preconfigured URL on demand, or startup",
    "repository": {
        "type": "git",
        "url": "https://github.com/grork/SimpleBrowseHelper"
    },
    "bugs": {
        "url": "https://github.com/grork/SimpleBrowserHelper/issues/"
    },
    "homepage": "https://github.com/grork/SimpleBrowserHelper/README.md",
    "version": "0.0.1",
    "extensionKind": [
        "ui"
    ],
    "capabilities": {
        "untrustedWorkspaces": {
            "supported": true
        }
    },
    "engines": {
        "vscode": "^1.66.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "browser",
        "preview"
    ],
    "activationEvents": [
        "onCommand:simplebrowser-helper-extension.openDefaultUrl",
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "codevoid.simplebrowser-helper-extension.openDefaultUrl",
                "title": "Open Default URL",
                "category": "Simple Browser Helper"
            }
        ],
        "configuration": [
            {
                "title": "Simple Browser Helper",
                "properties": {
                    "codevoid.simplebrowser-helper-extension.defaultUrl": {
                        "title": "URL to open the browser too",
                        "type": "string",
                        "default": null
                    },
                    "codevoid.simplebrowser-helper-extension.monitoredTasks": {
                        "title": "Task information to match for starting the browser",
                        "type": "array",
                        "items": {
                            "type": "object"
                        }
                    },
                    "codevoid.simplebrowser-helper-extension.taskBehaviour": {
                        "title": "How to monitor tasks for execution",
                        "type": "string",
                        "default": "session",
                        "enum": [
                            "manual",
                            "session",
                            "everyTime"
                        ],
                        "enumDescriptions": [
                            "Only open when manually invoked",
                            "Open at most once per session",
                            "Open every time a matching task is started"
                        ]
                    }
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.2.0",
        "@types/lodash": "^4.14.181",
        "@types/mocha": "^9.1.0",
        "@types/node": "14.x",
        "@types/node-fetch": "^2.6.1",
        "@types/vscode": "^1.66.0",
        "@vscode/test-electron": "^2.1.3",
        "glob": "^7.2.0",
        "mocha": "^9.2.2",
        "typescript": "^4.5.5"
    },
    "dependencies": {
        "lodash": "^4.17.21",
        "node-fetch": "^2.6.7"
    }
}